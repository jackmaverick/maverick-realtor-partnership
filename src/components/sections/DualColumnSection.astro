---
interface Props {
  leftTitle: string;
  leftDescription: string;
  leftBenefits: string[];
  leftButtonText: string;
  leftButtonHref: string;
  leftButtonVariant?: 'primary' | 'secondary';
  rightTitle: string;
  rightDescription: string;
  rightBenefits: string[];
  rightButtonText: string;
  rightButtonHref: string;
  rightButtonVariant?: 'primary' | 'secondary';
}

import CTAButton from '../CTAButton.astro';

const {
  leftTitle,
  leftDescription,
  leftBenefits,
  leftButtonText,
  leftButtonHref,
  leftButtonVariant = 'primary',
  rightTitle,
  rightDescription,
  rightBenefits,
  rightButtonText,
  rightButtonHref,
  rightButtonVariant = 'secondary',
} = Astro.props;
---

<section class="py-16 md:py-24 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid md:grid-cols-2 gap-8 lg:gap-12">
      <!-- Left Column -->
      <div class="p-8 bg-primary-50 rounded-2xl border border-primary-100">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">{leftTitle}</h2>
        <p class="text-gray-600 mb-6">{leftDescription}</p>
        <ul class="space-y-3 mb-6">
          {leftBenefits.map((benefit) => (
            <li class="flex items-start">
              <svg class="w-6 h-6 text-primary-600 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-700">{benefit}</span>
            </li>
          ))}
        </ul>
        <CTAButton href={leftButtonHref} variant={leftButtonVariant}>
          {leftButtonText}
        </CTAButton>
      </div>

      <!-- Right Column -->
      <div class="p-8 bg-accent-50 rounded-2xl border border-accent-100">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">{rightTitle}</h2>
        <p class="text-gray-600 mb-6">{rightDescription}</p>
        <ul class="space-y-3 mb-6">
          {rightBenefits.map((benefit) => (
            <li class="flex items-start">
              <svg class="w-6 h-6 text-accent-600 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-700">{benefit}</span>
            </li>
          ))}
        </ul>
        <CTAButton href={rightButtonHref} variant={rightButtonVariant}>
          {rightButtonText}
        </CTAButton>
      </div>
    </div>
  </div>
</section>
