---
interface Props {
  theme?: 'light' | 'dark';
}

const { theme = 'light' } = Astro.props;

const badges = [
  { label: '30+ Years Experience', icon: 'calendar' },
  { label: '500+ Realtor Partnerships', icon: 'users' },
  { label: 'Licensed & Insured', icon: 'shield' },
  { label: 'A+ BBB Rating', icon: 'star' },
];

const textColor = theme === 'dark' ? 'text-gray-300' : 'text-gray-700';
const iconColor = theme === 'dark' ? 'text-primary-400' : 'text-primary-600';
---

<div class="flex flex-wrap items-center justify-center gap-6 md:gap-8">
  {badges.map((badge) => (
    <div class="flex items-center space-x-2">
      {badge.icon === 'calendar' && (
        <svg class={`w-5 h-5 ${iconColor}`} fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
      )}
      {badge.icon === 'users' && (
        <svg class={`w-5 h-5 ${iconColor}`} fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
        </svg>
      )}
      {badge.icon === 'shield' && (
        <svg class={`w-5 h-5 ${iconColor}`} fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
        </svg>
      )}
      {badge.icon === 'star' && (
        <svg class={`w-5 h-5 ${iconColor}`} fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
        </svg>
      )}
      <span class={`text-sm font-medium ${textColor}`}>
        {badge.label}
      </span>
    </div>
  ))}
</div>
