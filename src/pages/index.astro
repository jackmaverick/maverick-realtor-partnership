---
// ChatPRD-inspired homepage - vibrant colors and modern layout
import BaseLayout from '../layouts/BaseLayout.astro';

export const prerender = true;
---

<BaseLayout
  title="Roof Kit | Kansas City Roofing for Realtors"
  description="Roof Kit, partnered with Maverick Exteriors, is Kansas City's trusted roofing partner for real estate professionals"
>
  <!-- Hero Section - ChatPRD style with colorful container -->
  <section class="bg-white pt-4 pb-2 md:pt-6 md:pb-3">
    <div class="px-6 sm:px-8 lg:px-12">
      <!-- Outer colorful container with gradient background photo -->
      <div class="relative overflow-hidden rounded-3xl">
        <!-- Gradient background (acts as photo placeholder) -->
        <div class="absolute inset-0 bg-gradient-to-br from-violet-500 via-pink-500 to-orange-400">
          <!-- Future photo will replace gradient: -->
          <!-- <img src="/hero-photo.jpg" class="w-full h-full object-cover" alt="Hero" /> -->
        </div>

        <!-- Inner white card with content - centered and narrower -->
        <div class="relative max-w-4xl mx-auto my-10 md:my-16 bg-white rounded-3xl px-8 py-12 md:px-12 md:py-16 text-center shadow-xl">
          <!-- Badge -->
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-violet-100 to-pink-100 border border-violet-200 rounded-full mb-6">
            <span class="text-2xl">✨</span>
            <span class="text-violet-700 font-semibold text-sm">Trusted by 500+ Kansas City Realtors</span>
          </div>

          <!-- Main Headline -->
          <h1 class="text-4xl md:text-6xl font-bold text-gray-900 mb-5 leading-tight">
            The Roofing Partner
            <br />
            That Helps{' '}
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-violet-600 via-pink-500 to-orange-500">
              Deals Close
            </span>
          </h1>

          <p class="text-lg md:text-xl text-gray-700 mb-8 max-w-2xl mx-auto">
            Fast inspections, payment at closing, and 30+ years serving Kansas City buyer's and seller's agents.
          </p>

          <!-- CTA Buttons -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
            <!-- Primary CTA with gradient + glow -->
            <div class="relative">
              <div class="absolute inset-0 bg-gradient-to-r from-violet-600 to-pink-600 rounded-lg blur opacity-25"></div>
              <a
                href="/contact"
                class="relative inline-flex items-center gap-2 px-8 py-4 bg-gradient-to-r from-violet-600 to-indigo-700 text-white font-semibold text-lg rounded-lg hover:from-violet-700 hover:to-indigo-800 transition-all shadow-lg"
                data-analytics-cta="true"
                data-analytics-label="Hero Schedule Partnership"
                data-analytics-location="hero"
              >
                Schedule Partnership Meeting
                <span>→</span>
              </a>
            </div>

            <!-- Secondary CTA -->
            <a
              href="tel:9132988759"
              class="inline-flex items-center gap-2 px-8 py-4 bg-white text-violet-700 font-semibold text-lg rounded-lg border-2 border-violet-300 hover:bg-violet-50 transition-colors"
              data-analytics-cta="true"
              data-analytics-label="Hero Call"
              data-analytics-location="hero"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
