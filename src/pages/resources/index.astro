---
// Resources landing page - ChatPRD inspired
import BaseLayout from '../../layouts/BaseLayout.astro';

const resources = [
  {
    title: 'Contract Language Guide',
    description: 'Pre-written contract language to protect your buyers and specify quality roofing work.',
    icon: 'üìã',
    gradient: 'from-pink-400 to-rose-500',
    href: '/resources/contract-language',
    badge: 'Essential'
  },
  {
    title: 'ROI Calculator',
    description: 'Calculate how much a new roof can increase your listing\'s appraisal value.',
    icon: 'üìä',
    gradient: 'from-violet-400 to-purple-500',
    href: '/resources/roi-calculator',
    badge: 'Popular'
  },
  {
    title: 'Partnership Guide',
    description: 'Learn about our tiered partnership program and exclusive benefits for active realtors.',
    icon: 'ü§ù',
    gradient: 'from-orange-400 to-rose-500',
    href: '/resources/partnership-guide',
    badge: 'New'
  },
  {
    title: 'Case Studies',
    description: 'Real examples of how Realtor Roof helped realtors close difficult deals.',
    icon: 'üìà',
    gradient: 'from-indigo-400 to-violet-500',
    href: '/resources/case-studies',
    badge: null
  },
  {
    title: 'Inspection Checklist',
    description: 'What your clients should look for during a roof inspection walkthrough.',
    icon: '‚úÖ',
    gradient: 'from-sky-400 to-cyan-500',
    href: '/resources/inspection-checklist',
    badge: null
  },
  {
    title: 'Timeline Templates',
    description: 'Standard timelines for inspections and installations to share with your clients.',
    icon: 'üìÖ',
    gradient: 'from-emerald-400 to-green-500',
    href: '/resources/timeline-templates',
    badge: null
  }
];
---

<BaseLayout
  title="Resources for Realtors | Realtor Roof"
  description="Free resources, guides, and tools to help Kansas City realtors serve their clients better."
>
  <!-- Hero Section -->
  <section class="relative py-20 md:py-32 overflow-hidden">
    <!-- Vibrant gradient background -->
    <div class="absolute inset-0 bg-gradient-to-br from-violet-200 via-pink-200 to-orange-200"></div>
    <div class="absolute inset-0 bg-gradient-to-tr from-violet-300/40 via-transparent to-pink-300/40"></div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-4xl mx-auto mb-16">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-violet-100 to-pink-100 border border-violet-200 rounded-full mb-6">
          <span class="text-2xl">üìö</span>
          <span class="text-violet-700 font-semibold text-sm">Free Resources for Realtors</span>
        </div>

        <h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-6 leading-tight">
          Tools to Help You{' '}
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-violet-600 to-pink-600">
            Close More Deals
          </span>
        </h1>

        <p class="text-xl text-gray-700">
          Everything you need to educate clients, write better contracts, and maximize property values.
        </p>
      </div>

      <!-- Resource Cards Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
        {resources.map((resource) => (
          <a
            href={resource.href}
            class="group relative bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden border border-gray-100"
          >
            {/* Gradient top border */}
            <div class={`h-2 bg-gradient-to-r ${resource.gradient}`}></div>

            <div class="p-8">
              {/* Badge */}
              {resource.badge && (
                <div class="absolute top-6 right-6">
                  <span class={`inline-block px-3 py-1 bg-gradient-to-r ${resource.gradient} text-white text-xs font-bold rounded-full`}>
                    {resource.badge}
                  </span>
                </div>
              )}

              {/* Icon */}
              <div class={`inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br ${resource.gradient} text-white text-3xl rounded-xl mb-6 shadow-lg`}>
                {resource.icon}
              </div>

              {/* Content */}
              <h3 class="text-2xl font-bold text-gray-900 mb-3 group-hover:text-violet-600 transition-colors">
                {resource.title}
              </h3>
              <p class="text-gray-600 leading-relaxed mb-4">
                {resource.description}
              </p>

              {/* Arrow */}
              <div class="flex items-center text-violet-600 font-semibold group-hover:gap-2 transition-all">
                <span>Learn more</span>
                <span class="group-hover:translate-x-1 transition-transform">‚Üí</span>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 md:py-32 bg-gradient-to-r from-violet-600 to-pink-600">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
        Need a Custom Resource?
      </h2>
      <p class="text-xl text-white/90 mb-10">
        We're always creating new tools for our realtor partners. Let us know what would help you most.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white text-violet-700 font-semibold text-lg rounded-lg hover:bg-violet-50 transition-colors shadow-xl">
          Request a Resource
          <span>‚Üí</span>
        </a>
        <a href="tel:9132988759" class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white/10 backdrop-blur-sm text-white font-semibold text-lg rounded-lg border-2 border-white/30 hover:bg-white/20 transition-colors">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          (913) 298-8759
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
