        <!-- Bronze Tier -->
        <div class="relative bg-gradient-to-br from-orange-100 to-amber-100 border-2 border-orange-200 rounded-3xl p-8 hover:shadow-2xl transition-all">
          <div class="absolute top-6 right-6">
            <div class="w-16 h-16 bg-gradient-to-br from-orange-400 to-amber-500 text-white rounded-full flex items-center justify-center text-3xl shadow-lg">
              ü•â
            </div>
          </div>

          <h3 class="text-3xl font-bold text-gray-900 mb-2">Bronze Partner</h3>
          <p class="text-orange-700 font-semibold mb-6">1-5 referrals/year</p>

          <ul class="space-y-3 mb-8">
            <li class="flex items-start gap-2">
              <svg class="w-5 h-5 text-orange-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-700">24-48 hour inspection turnaround</span>
            </li>
            <li class="flex items-start gap-2">
              <svg class="w-5 h-5 text-orange-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
