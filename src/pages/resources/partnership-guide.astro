// Partnership Guide - ChatPRD inspired tiered program page
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout
  title="Partnership Program | Maverick Exteriors"
  description="Join our tiered partnership program and unlock exclusive benefits for your real estate business."
>
  <!-- Hero Section -->
  <section class="relative py-16 md:py-24 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-orange-200 via-rose-200 to-pink-200"></div>
    <div class="absolute inset-0 bg-gradient-to-tr from-orange-300/40 via-transparent to-rose-300/40"></div>

    <div class="relative max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
