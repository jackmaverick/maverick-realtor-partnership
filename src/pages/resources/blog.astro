---
import BaseLayout from '../../layouts/BaseLayout.astro';

const blogPosts = [
  {
    id: 'pre-listing-roof-replacement',
    title: 'Getting Your Roof Ready to Sell: The Ultimate Guide to Pre-Listing Roof Replacements',
    excerpt: 'Learn why pre-listing roof replacements boost sale prices, speed up closing times, and remove inspection negotiations.',
    date: '2025-10-29',
    category: 'Seller Strategy',
    gradient: 'from-emerald-400 to-teal-500',
    readTime: '12 min read',
    link: '/resources/blog/pre-listing-roof-replacement'
  }
];
---

<BaseLayout
  title="Roofing Insights Blog | Realtor Roof"
  description="We‚Äôre assembling deep-dive roofing content for Kansas City realtors. Jump on the list to be first in line."
>
  <!-- Hero Section -->
  <section class="relative py-20 md:py-32 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-blue-200 via-violet-200 to-pink-200"></div>
    <div class="absolute inset-0 bg-gradient-to-tr from-blue-300/40 via-transparent to-violet-300/40"></div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-4xl mx-auto">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-blue-100 to-violet-100 border border-blue-200 rounded-full mb-6">
          <span class="text-2xl">üìù</span>
          <span class="text-blue-700 font-semibold text-sm">Insights & Updates</span>
        </div>

        <h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-6 leading-tight">
          Roofing Insights for{' '}
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-violet-600">
            Kansas City Realtors
          </span>
        </h1>

        <p class="text-xl text-gray-700">
          Stay informed with expert advice, market trends, and practical strategies to better serve your clients.
        </p>
      </div>
    </div>
  </section>

  <!-- Blog Posts Grid -->
  <section class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {blogPosts.map((post) => (
          <a href={post.link} class="group h-full">
            <article class="bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden border border-gray-100 h-full flex flex-col">
              <div class={`h-3 bg-gradient-to-r ${post.gradient}`}></div>

              <div class="p-6 flex-1 flex flex-col">
                <div class="flex items-center gap-3 mb-4 flex-wrap">
                  <span class={`inline-block px-3 py-1 bg-gradient-to-r ${post.gradient} bg-opacity-10 font-semibold rounded-full text-xs`}>
                    {post.category}
                  </span>
                  <span class="text-gray-400 text-sm">{post.date}</span>
                </div>

                <h2 class="text-2xl font-bold text-gray-900 mb-4 group-hover:text-violet-600 transition-colors leading-tight flex-1">
                  {post.title}
                </h2>

                <p class="text-gray-600 mb-6 leading-relaxed flex-1">
                  {post.excerpt}
                </p>

                <div class="flex items-center justify-between text-sm mt-auto">
                  <span class="text-gray-500">{post.readTime}</span>
                  <span class="flex items-center gap-1 text-violet-600 font-semibold group-hover:gap-2 transition-all">
                    Read more
                    <span class="group-hover:translate-x-1 transition-transform">‚Üí</span>
                  </span>
                </div>
              </div>
            </article>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Newsletter CTA -->
  <section class="py-20 md:py-32 bg-gradient-to-r from-blue-600 to-violet-600">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
        More Insights Coming Soon
      </h2>
      <p class="text-xl text-white/90 mb-10">
        We're developing additional guides on insurance policies, storm season preparation, and realtor partnership strategies.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center max-w-2xl mx-auto">
        <a
          href="/contact?topic=blog-updates"
          class="px-8 py-4 bg-white text-violet-700 font-semibold text-lg rounded-lg hover:bg-violet-50 transition-colors shadow-xl"
        >
          Get Early Access Updates
        </a>
        <a
          href="/resources"
          class="px-8 py-4 border border-white text-white font-semibold text-lg rounded-lg hover:bg-white/10 transition-colors"
        >
          Back to Resources
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
