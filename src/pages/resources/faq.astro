      </div>
      <p class="text-white/70 text-sm mt-6">
        Or email us at <a href="mailto:realtors@maverickexteriors.com" class="underline hover:text-white transition-colors">realtors@maverickexteriors.com</a>
      </p>
    </div>
  </section>
</BaseLayout>

<script>
  // Simple FAQ search functionality
  document.querySelector('input[type="text"]')?.addEventListener('input', (e) => {
    const searchTerm = (e.target as HTMLInputElement).value.toLowerCase();
    const allFaqDetails = document.querySelectorAll('details');

    allFaqDetails.forEach((details) => {
      const question = details.querySelector('h3')?.textContent?.toLowerCase() || '';
      const answer = details.querySelector('p')?.textContent?.toLowerCase() || '';

      if (question.includes(searchTerm) || answer.includes(searchTerm)) {
        (details as HTMLElement).style.display = 'block';
        if (searchTerm.length > 2) {
          details.setAttribute('open', '');
        }
      } else if (searchTerm.length > 0) {
        (details as HTMLElement).style.display = 'none';
      } else {
        (details as HTMLElement).style.display = 'block';
        details.removeAttribute('open');
      }
    });
  });
</script>
