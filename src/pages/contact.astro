---
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactForm from '../components/forms/ContactForm.astro';

export const prerender = true;

const formHiddenFields = {
  partnership: {
    source: 'contact-page',
    intent: 'realtor-partnership',
  },
  inspection: {
    source: 'contact-page',
    intent: 'inspection-request',
  },
  general: {
    source: 'contact-page',
    intent: 'general-inquiry',
  },
};

const formTabs = [
  {
    id: 'partnership',
    label: 'Partnership Form',
    eyebrow: 'Realtor Partners',
    title: 'Partnership Program Inquiry',
    description: 'Share referral volume, brokerage info, and how we can support your clients.',
    hiddenFields: formHiddenFields.partnership,
  },
  {
    id: 'inspection',
    label: 'Inspection Request',
    eyebrow: 'Request An Inspection',
    title: 'Property Inspection & Repair Scope',
    description: 'Send the address and transaction details so we can deliver photos, pricing, and documentation.',
    hiddenFields: formHiddenFields.inspection,
  },
  {
    id: 'general',
    label: 'General Questions',
    eyebrow: 'General Questions',
    title: 'Need Something Else?',
    description: 'Use this form for training requests, co-branded marketing, or anything outside inspections.',
    hiddenFields: formHiddenFields.general,
  },
];
---

<BaseLayout
  title="Contact Us"
  description="Get in touch with Roof Kit. Request a property inspection, schedule a partnership meeting, or call us at (913) 298-8759."
>
  <!-- Hero - ChatPRD Style -->
  <section class="bg-white pt-4 pb-2 md:pt-6 md:pb-3">
    <div class="px-6 sm:px-8 lg:px-12">
      <div class="relative overflow-hidden rounded-3xl">
        <div class="absolute inset-0 bg-gradient-to-br from-blue-500 via-cyan-500 to-teal-400"></div>
        <div class="relative max-w-4xl mx-auto my-10 md:my-16 bg-white rounded-3xl px-8 py-12 md:px-12 md:py-16 text-center shadow-xl">
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
            Let's Work Together
          </h1>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Call us to book an inspection, get pricing, or talk through a roofing plan for your listing or buyers.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Methods -->
  <section class="py-12 bg-white border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="inline-flex items-center justify-center h-12 w-12 bg-gradient-to-br from-blue-100 to-cyan-100 rounded-lg mb-4">
            <svg class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Phone</h3>
          <a href="tel:9132988759" class="text-blue-600 hover:text-blue-700 font-medium text-lg font-semibold">
            (913) 298-8759
          </a>
          <p class="text-sm font-semibold text-emerald-600 mt-1 uppercase tracking-wide">2 Hour Response Guaranteed</p>
        </div>

        <div class="text-center">
          <div class="inline-flex items-center justify-center h-12 w-12 bg-gradient-to-br from-violet-100 to-purple-100 rounded-lg mb-4">
            <svg class="h-6 w-6 text-violet-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Email</h3>
          <a href="mailto:info@maverickexteriors.com" class="text-violet-600 hover:text-violet-700 font-medium">
            info@maverickexteriors.com
          </a>
          <p class="text-sm text-gray-500 mt-1">We reply within 24 hours</p>
        </div>

        <div class="text-center">
          <div class="inline-flex items-center justify-center h-12 w-12 bg-gradient-to-br from-emerald-100 to-teal-100 rounded-lg mb-4">
            <svg class="h-6 w-6 text-emerald-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Location</h3>
          <p class="text-gray-600">Kansas City, Kansas</p>
          <p class="text-sm text-gray-500 mt-1">Serving the entire KC metro</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Form -->
  <section class="py-16 md:py-24 bg-white">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-white border border-gray-200 rounded-2xl p-8 md:p-12 shadow-sm">
        <h2 class="text-3xl font-bold text-gray-900 mb-6 text-center">Call For Immediate Help</h2>
        <div class="space-y-6">
          <div class="flex items-start gap-4">
            <div class="flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-xl bg-blue-100 text-blue-600">
              <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
            </div>
            <div>
              <h3 class="text-xl font-semibold text-gray-900">Need an inspection fast?</h3>
              <p class="text-gray-600">Call and we’ll dispatch a roofing specialist within two hours. Get photos, documentation, and same-day quotes that keep your deal on track.</p>
            </div>
          </div>

          <div class="flex items-start gap-4">
            <div class="flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-xl bg-violet-100 text-violet-600">
              <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m1-6H8a2 2 0 00-2 2v15l6-3 6 3V4a2 2 0 00-2-2z" />
              </svg>
            </div>
            <div>
              <h3 class="text-xl font-semibold text-gray-900">Need roof pricing or replacement options?</h3>
              <p class="text-gray-600">We’ll walk you through material choices, insurance coordination, payment-at-closing options, and how to position the project with your buyers or sellers.</p>
            </div>
          </div>

          <div class="flex items-start gap-4">
            <div class="flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-xl bg-emerald-100 text-emerald-600">
              <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c1.657 0 3 .895 3 2s-1.343 2-3 2-3 .895-3 2 1.343 2 3 2 3-.895 3-2m6 0a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <h3 class="text-xl font-semibold text-gray-900">Want to join our realtor partnership program?</h3>
              <p class="text-gray-600">Call to talk about referral benefits, co-branded marketing, and how we support your clients from inspection through install.</p>
            </div>
          </div>

          <div class="flex items-center justify-center pt-4">
            <a href="tel:9132988759" class="inline-flex items-center gap-3 rounded-xl bg-gradient-to-r from-blue-600 to-indigo-600 px-8 py-4 text-lg font-semibold text-white shadow-lg transition hover:from-blue-700 hover:to-indigo-700">
              Call Now • (913) 298-8759
            </a>
          </div>
        </div>
        <div class="mt-12 space-y-10">
          <div class="space-y-6">
            <div class="grid gap-4 md:grid-cols-3" role="tablist" aria-label="Select a contact form">
              {formTabs.map((tab, index) => (
                <button
                  id={`${tab.id}-tab`}
                  type="button"
                  role="tab"
                  aria-selected={index === 0 ? 'true' : 'false'}
                  aria-controls={`${tab.id}-panel`}
                  data-tab-button
                  data-tab-target={tab.id}
                  class={`rounded-2xl border bg-white px-4 py-5 text-left transition duration-200 focus:outline-none focus-visible:ring-2 focus-visible:ring-blue-200 ${
                    index === 0 ? 'border-blue-500 shadow-lg shadow-blue-100' : 'border-gray-200 hover:border-gray-300'
                  }`}
                >
                  <p class="text-xs font-semibold uppercase tracking-wide text-blue-600">{tab.eyebrow}</p>
                  <p class="mt-2 text-lg font-semibold text-gray-900">{tab.label}</p>
                  <p class="mt-1 text-sm text-gray-500">{tab.description}</p>
                </button>
              ))}
            </div>

            <div>
              {formTabs.map((tab, index) => (
                <div
                  id={`${tab.id}-panel`}
                  role="tabpanel"
                  aria-labelledby={`${tab.id}-tab`}
                  data-tab-panel={tab.id}
                  class={`border border-gray-100 rounded-2xl p-6 shadow-sm ${index === 0 ? '' : 'hidden'}`}
                >
                  <div class="mb-6 text-center">
                    <p class="text-sm font-semibold text-blue-600 tracking-wide uppercase">{tab.eyebrow}</p>
                    <h3 class="text-2xl font-bold text-gray-900 mt-2">{tab.title}</h3>
                    <p class="text-gray-600 mt-2">{tab.description}</p>
                  </div>
                  <ContactForm formType={tab.id as 'partnership' | 'inspection' | 'general'} hiddenFields={tab.hiddenFields} />
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Placeholder -->
  <section class="py-16 md:py-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Our Service Area</h2>
        <p class="text-lg text-gray-600">Proudly serving the entire Kansas City metropolitan area</p>
      </div>

      <div class="bg-gray-200 rounded-2xl aspect-video flex items-center justify-center">
        <div class="text-center p-8">
          <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
          </svg>
          <p class="text-gray-500">Service area map placeholder</p>
          <p class="text-sm text-gray-400 mt-2">Kansas & Missouri sides of Kansas City metro</p>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-16 md:py-24 bg-white">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Frequently Asked Questions</h2>
      </div>

      <div class="space-y-6">
        <div class="border border-gray-200 rounded-lg p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-2">How quickly can you schedule an inspection?</h3>
          <p class="text-gray-600">We typically schedule inspections within 48 hours for realtor requests. In urgent situations, same-day or next-day appointments are often available.</p>
        </div>

        <div class="border border-gray-200 rounded-lg p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Do you really offer payment at closing?</h3>
          <p class="text-gray-600">Yes! We understand that buyers often have budget constraints during the home purchase process. Payment at closing is available for qualified transactions.</p>
        </div>

        <div class="border border-gray-200 rounded-lg p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-2">What areas do you serve?</h3>
          <p class="text-gray-600">We serve the entire Kansas City metropolitan area on both the Kansas and Missouri sides, including Leawood, Overland Park, Prairie Village, Mission Hills, Olathe, Lee's Summit, and more.</p>
        </div>

        <div class="border border-gray-200 rounded-lg p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-2">How does the partnership program work?</h3>
          <p class="text-gray-600">Our tiered partnership program offers increasing benefits based on referral volume. Contact us to learn more about Bronze, Silver, and Gold partnership levels.</p>
        </div>
      </div>
    </div>
  </section>

  <script>
    const initContactTabs = () => {
      const tabButtons = Array.from(document.querySelectorAll('[data-tab-button]'));
      const tabPanels = Array.from(document.querySelectorAll('[data-tab-panel]'));
      if (!tabButtons.length || !tabPanels.length) return;

      const activeClasses = ['border-blue-500', 'shadow-lg', 'shadow-blue-100'];
      const inactiveClasses = ['border-gray-200'];

      const toggleButtonStyles = (button, isActive) => {
        button.setAttribute('aria-selected', String(isActive));
        button.dataset.active = isActive ? 'true' : 'false';
        activeClasses.forEach((cls) => button.classList.toggle(cls, isActive));
        inactiveClasses.forEach((cls) => button.classList.toggle(cls, !isActive));
      };

      const activateTab = (targetId) => {
        if (!targetId) return;
        tabButtons.forEach((button) => {
          const isActive = button.dataset.tabTarget === targetId;
          toggleButtonStyles(button, isActive);
        });

        tabPanels.forEach((panel) => {
          const isActive = panel.dataset.tabPanel === targetId;
          panel.classList.toggle('hidden', !isActive);
        });
      };

      const defaultButton = document.querySelector('[data-tab-button][aria-selected="true"]');
      activateTab(defaultButton?.dataset.tabTarget || tabButtons[0]?.dataset.tabTarget);

      tabButtons.forEach((button) => {
        button.addEventListener('click', () => activateTab(button.dataset.tabTarget));
      });
    };

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initContactTabs, { once: true });
    } else {
      initContactTabs();
    }
  </script>
</BaseLayout>
